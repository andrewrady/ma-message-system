  <h1>Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "pui-form block-container tablet-up-1 laptop-up-2 blocks mb-3 p-2"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="block">
      <label class="pui-form__field">First Name
        <%= f.text_field :firstName%>
      </label>
    </div>

    <div class="block">
      <label class="pui-form__field">Last Name
        <%= f.text_field :lastName %>
      </label>
    </div>

    <div class="block">
      <label class="pui-form__field">School Name
      <em>(will be your url)</em>
        <%= f.text_field :schoolName %>
      </label>
    </div>


    <div class="block">
      <label class="pui-form__field">Email
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </label>
    </div>

    <div class="block">
      <label class="pui-form__field">Password
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </label>
    </div>

    <div class="block">
      <label class="pui-form__field">Password Confirmation
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </label>
    </div>

    <div class="flex--center-content my-2">
      <%= f.submit("Sign up", class: "button button--lg") %>
    </div>
<% end %>